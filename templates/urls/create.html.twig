{% extends 'base.html.twig' %}


{% block body %}
    <h1>The best URL shortener out there!</h1>
        {{ form_start(form, {'attr' : {'novalidate': 'novalidate'}}) }}
            {{ form_widget(form.original) }}

            {% for error in form.original.vars.errors %}
                <div class="error-message">
                    {{ error.message }}
                </div>
            {% endfor %}
        {{ form_end(form) }}
{% endblock %}
